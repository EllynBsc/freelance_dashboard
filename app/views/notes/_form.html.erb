

<div class="container">
  <div class="row">
    <div class="col-6 offset-sm-3">
      <%= simple_form_for note do |f| %>
        <%= f.input :title %>
        <%= f.input :content %>

           <%= f.simple_fields_for :taggings do |ff|  %>
           <%= ff.association :tag, collection: Tag.all %>
          <% end %>
        <%= f.submit class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>









